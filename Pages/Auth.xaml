<Page x:Class="KompKomp04.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KompKomp04.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFE7FABF">
            <TextBlock Text="Авторизация" FontSize="40" HorizontalAlignment="Center"/>
            <TextBlock Text="Логин:" FontSize="30" HorizontalAlignment="Center"/>
            <TextBox x:Name="TxtLogin" Width="300" Height="40" BorderBrush="Black"/>
            <TextBlock Text="Пароль:" FontSize="30" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="Pass" Width="300" Height="40" BorderBrush="Black"/>
            <WrapPanel>
                <Button Name="Voiti" Width="100" Height="40" Content="Войти" FontSize="20" Margin="10 10 10 10" Click="Voiti_Click"/>
                <Button Name="Reg" Width="200" Height="40" Content="Зарегистрироваться" FontSize="20" Margin="10 10 10 10" Click="Reg_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
